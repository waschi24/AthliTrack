<Window x:Class="AthliTrack.windows.WorkoutDetails"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AthliTrack.windows"
        mc:Ignorable="d"
        Title="WorkoutDetails" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="ExerciseGrid" AutoGenerateColumns="False" CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Exercise" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Sets" Binding="{Binding Sets}" Width="*"/>
                <DataGridTextColumn Header="Reps" Binding="{Binding Reps}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
